                        <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />

		<%= stylesheet_link_tag %w'reset base plugins/formtastic plugins/formtastic_changes', :cache => true %>

		<%#= stylesheet_link_tag 'admin/admin' %>
		
		<%#= javascript_include_tag :all, :cache => true %>

		<%#= javascript_include_tag ['admin/sortable_tree',
									'admin/updatable_select_box',
									# 'admin/facebox',
									'admin/admin' ] %>
		

		<title><%= yield :title %> Admin</title>
	</head>
	<body class="admin">
                      
		<div id="top">
			<div class="container">
                            

				<!-- The navigation -->
				<%= render 'layouts/inc/admin_nav' %>

			</div>
		</div>
		

	    <!-- CRUD links etc in here -->
		<div id="options">
			<div class="container">
				
				<!-- Show them who they're logged in as -->
				<%= render 'layouts/inc/admin_login_details' if logged_in? %>
				
				<%= yield :options %>
			</div>
		</div>

	            
		<!-- main content in here -->
		<div id="main" >

			<div class="container">
				
				<div id="content">
					
					<!-- Flash! -->
					<%= render :partial => 'layouts/inc/flash', :locals => { :flash => flash } unless flash.empty? %>
					
					<div class="inside">
						<%= yield %>
					</div>
					
				</div> <!-- end of content -->
				
				<div id="side">
					<div class="inside">
						
						<%= yield :side %>
						<%= yield :help %>
						
						
					</div> <!-- end of inside -->
				</div> <!-- end of side -->
				
			</div> <!-- end of container -->
		</div> <!-- end of main -->
		        
		        
		<!-- Footer details -->
		<div id="footer">
			<div class="container">
				
				<%= @current_account %>	
				powered by <%= link_to 'Newfangled', 'http://newfangled.com.au' %>
								
			</div>
		</div>
		


	</body>
</html>