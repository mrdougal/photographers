                        <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<%= stylesheet_link_tag :all, :cache => true %>
		<%= stylesheet_link_tag 'admin/admin' %>
		
		<%= javascript_include_tag :all, :cache => true %>

		<%= javascript_include_tag ['admin/sortable_tree',
									'admin/updatable_select_box',
									# 'admin/facebox',
									'admin/admin' ] %>
		

		<title><%= yield :title %> Admin</title>
	</head>
	<body class="admin">
                      
		<div id="top">
			<div class="container">
                            
				<!-- <div class="right"> -->
				<%= link_to 'View Site', root_path, { :class => 'right', :id => "logo" } %>
				<!-- </div>   -->

				<!-- The navigation -->
				<%= render :partial => 'layouts/inc/admin_navigation' if logged_in? %>


			</div>
		</div>
		

	    <!-- CRUD links etc in here -->
		<div id="options">
			<div class="container">
				<%= yield :options %>
		        <%= render :partial => 'layouts/inc/admin_login_details' if logged_in? %>
			</div>
		</div>

		<!-- Flash! -->
		<%= render :partial => 'layouts/inc/flash', :locals => { :flash => flash } unless flash.empty? %>
	            
		<!-- main content in here -->
		<div id="main" >

			<div class="container">
				
				
				<table border="0" id="content">
					<tr>
						<td>
							<%= yield %>
						</td>
						<%= content_tag :td, content_tag(:div, @content_for_side), {
								:id => 'side_bar'
							} if @content_for_side %>

					</tr>
				</table>
			</div>     
		</div>  
		        
		        
		<!-- Footer details -->
		<div id="footer">
			<div class="container">
				
				Site built by Newfangled
				
			</div>
		</div>
		


	</body>
</html>