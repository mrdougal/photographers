
<!-- We need a multipart form as we're uploading images -->

<% semantic_form_for @photo, :html => { :multipart => true } do |f| %>  

	<% f.inputs do %>

		<%= f.input :image, :as => :file %>
		<%= f.input :description %>
		
		<%= f.input :categories, :as => :string  %>
		<%= f.input :sets, :as => :string %>
		<%= f.input :tags, :as => :string %>
		
		
		<%= f.buttons %>
	
	<% end %>

	
<% end %>

