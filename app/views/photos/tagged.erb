<% 
	msg = "#{pluralize @photos.total_entries, "photo"} tagged #{@tag}"
	title  "#{msg} #{pagination_title @photos}" %>

<h1><%= msg %></h1>

<% @photos.each do |photo| %>
    <% link_to photo do %>
		<%= image_tag photo.url(:thumb), { :class => "uploaded" } %>
	<% end %>
<% end %>


<%= will_paginate @photos %>

