<% content_for :options do %>

<div class="crud">


	<% if controller.action_name == 'index' %>
                      
	<%= link_to 'Create a new category', new_admin_category_path, { 
		:class => 'new', 
		:accesskey => 'n',
		:rel => '#overlay' } %>


	<!-- Add a listener to observe this link -->
	<%= link_to 'Sort the categories', '/admin/#sort', { 
		:class => 'sort',
		:id => 'toggle-sorting' } %>
		
	<% content_for :javascript do %>	
		$('#toggle-sorting').bind('click',function(){
			console.log('toggled');
			return false;
		})
	<% end %>

    <% end %>                  

                      
	<% if @category && !@category.new_record? %>
	                  
	<%= link_to 'Show', 
				admin_category_path(@category), 
				{ :class => 'show' } unless controller.action_name == 'show'  %>
	                  
	<%= link_to "Edit '#{@category}'", edit_admin_category_path(@category), { 
		:class => 'edit', 
		:accesskey => 'e' } unless controller.action_name == 'edit'  %>
	
	<%= link_to "Delete '#{@category}'", admin_category_path(@category), { 
		:confirm => 'You sure you want to delete this category?', 
		:method => :delete ,
		:class => 'delete', 
		:accesskey => 'd' } if @category.can_delete? %>
	<% end %>         

</div>
 

<% end %>

