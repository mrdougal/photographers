<% title "Photos #{pagination_title @categories}" %>



<div id="categories">
	
	<ul>
	<% @categories.each do |category| %>

		<li class="group" id="category_<%= category.id %>">
			<span class="handle">drag me</span>
			<h2><%= link_to category, admin_category_path(category) %></h2>
		
			<% category.photos.top.each do |photo| %>
			<% link_to edit_admin_photo_path(photo) do %>
					<%= image_tag photo.url(:tiny), { :class => "uploaded" } %>
				<% end %>
			<% end %>
		</li>
		
	<% end %>
	</ul>
	
	
</div>



<%= will_paginate @categories %>

<%= render 'admin/categories/inc/crud' %>

<% content_for :javascript do %>

	$("#categories").sortable({
		opacity: 0.6,
		items: 'li',
		handle: '.handle'
	});


<% end %>