<% title "Photos #{pagination_title @categories}" %>



<div id="categories">
	
	<% @categories.each do |category| %>

		<div class="group">
			<h2><%= link_to category, admin_category_path(category) %></h2>
			
			<ul>
				<% category.photos.each do |photo| %>
				<li><% link_to edit_admin_photo_path(photo) do %>
						<%= image_tag photo.url(:tiny), { :class => "uploaded" } %>
					<% end %>
				</li>
				<% end %>
			</ul>
			
		</div>
		
	<% end %>
	
	<div class="group">
		
	<%= link_to 'Create a new category', new_admin_category_path, { 
		:class => 'new', 
		:accesskey => 'n',
		:rel => '#overlay' } %>
	</div>
	
</div>



<%= will_paginate @categories %>

<% content_for :options do %>

	<%#= render :partial => 'admin/photos/inc/sets' if @category %>


<% end %>



