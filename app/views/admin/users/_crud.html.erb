
<% content_for :side do %>

<div class="crud">
                      
	<%= link_to 'New', new_admin_user_path, { 
		:class => 'new', 
		:accesskey => 'n' } unless controller.action_name == 'new' %>
                      
                      
	<% if @user && !@user.new_record? %>
	                  
	<%= link_to 'Show', 
				admin_user_path(@user), 
				{ :class => 'show' } unless controller.action_name == 'show'  %>
	                  
	<%= link_to 'Edit', edit_admin_user_path(@user), { 
		:class => 'edit', 
		:accesskey => 'e' } unless controller.action_name == 'edit'  %>
	
	<%= link_to 'Delete', admin_user_path(@user), { 
		:confirm => 'You sure you want to delete this user?', 
		:method => :delete ,
		:class => 'delete', 
		:accesskey => 'd' } %>
	<% end %>         

</div>
         
<% end %>

