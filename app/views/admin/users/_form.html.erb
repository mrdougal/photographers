
<% semantic_form_for [:admin, @user] do |f| %>

	<% f.inputs do %>
	
		<%= f.input :username, :class => "large", 
					:hint => "This is the what you use to access the admin section"  %>
					
		<%= f.input :email, :required => true %>
	<% end %>
	
	<% f.inputs :name => 'Password' do %>
		<%= f.input :password, :hint => "Please use at least 4 characters"  %>
		<%= f.input :password_confirmation, :hint => "Needs to match the password" %>
	<% end %>

	
	<%= f.buttons %>
	
<% end %>