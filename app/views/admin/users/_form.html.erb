
<% semantic_form_for [:admin, @user] do |f| %>

	<% f.inputs do %>
		<%= f.input :username, :class => "large" %>
		<%= f.input :email %>
	<% end %>
	
	<% f.inputs :name => 'Password' do %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
	<% end %>

	
	<%= f.buttons %>
	
<% end %>