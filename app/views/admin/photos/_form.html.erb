
<!-- We need a multipart form as we're uploading images -->

<% semantic_form_for [:admin, @photo] do |f| %>  

	<% f.inputs do %>
	
	
		<%= f.input :title, :hints => 'This is a hint' %>
	
		<!-- For rating the photo -->
		<%= f.input :rating, 
					:as => :radio, 
					:collection => (1..5),
					:input_html => { :class => "star" },
					:hint => 'Higher rated photos will appear on the homepage' %>
					
		<%= f.input :category, :collection => Category.all %> 

		<%= f.buttons %>
	
	<% end %>

	
<% end %>
